<configuration name="verto.conf" description="HTML5 Verto Endpoint">

  <settings>
    <param name="debug" value="10"/>
    <param name="enable-binding-string" value="false"/>
    <param name="enable-text" value="false"/>
    <param name="enable-presentation" value="false"/>
    <param name="listen-ip" value="0.0.0.0"/>
    <param name="listen-port" value="8081"/>
    <param name="wss-binding" value=":8082"/>
    <param name="mcast-ip" value="224.1.1.1"/>
    <param name="mcast-port" value="1337"/>
    <param name="rtp-ip" value="$${local_ip_v4}"/>
    <param name="outbound-codec-string" value="opus,vp8"/>
    <param name="inbound-codec-string" value="opus,vp8"/>
  </settings>

  <profiles>
    <profile name="default">
      <param name="mcast-force-addr" value="false"/>
      <param name="outbound-codec-string" value="opus,vp8"/>
      <param name="inbound-codec-string" value="opus,vp8"/>
      <param name="video-outbound-bandwidth" value="0"/>
      <param name="video-inbound-bandwidth" value="0"/>

      <param name="auto-login-domains" value=""/>
      <param name="blind-reg" value="false"/>
      <param name="rtp-ip" value="$${local_ip_v4}"/>
      <param name="ext-rtp-ip" value="auto"/>

      <param name="open-config-file" value=""/>
      <param name="open-config-dir" value=""/>
      <param name="local-network" value=""/>
      <param name="force-register-domain" value=""/>
      <param name="verto-context" value="default"/>
      <param name="detach-timeout-sec" value="86400"/>
      <param name="capture-timeout-sec" value="30"/>
      <param name="timer-name" value="soft"/>
    </profile>
  </profiles>
</configuration>
